<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="passworld.controller.AuthController">
    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <HBox alignment="CENTER" spacing="5.0">
                <Button fx:id="loginSectionButton" onAction="#showLoginSection" styleClass="auth-section"/>
                <Region maxHeight="15.0" prefHeight="15.0" styleClass="button-bar-separator"/>
                <Button fx:id="signupSectionButton" onAction="#showSignupSection" styleClass="auth-section"/>
            </HBox>
            <StackPane VBox.vgrow="ALWAYS">
                <!-- Sección de Registro -->
                <VBox fx:id="signupSection" alignment="CENTER" spacing="7.0" visible="false">
                    <VBox spacing="2.0">
                        <Label fx:id="accountDetailsLabel">
                            <font>
                                <Font name="Helvetica Neue Medium" size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="signupMailField"/>
                        <Label fx:id="emailErrorLabel" managed="false" styleClass="error-label"
                               textFill="red" visible="false" wrapText="true"/>
                    </VBox>
                    <VBox spacing="2.0">
                        <HBox alignment="CENTER" spacing="10.0">
                            <PasswordField fx:id="signupPasswordField" HBox.hgrow="ALWAYS"/>
                            <PasswordField fx:id="signupConfirmPasswordField" HBox.hgrow="ALWAYS"/>
                        </HBox>
                        <Label fx:id="passwordErrorLabel" managed="false" styleClass="error-label"
                               textFill="red" visible="false" wrapText="true"/>
                    </VBox>
                    <Region maxHeight="3.0" prefHeight="3.0"/>
                    <VBox spacing="2.0">
                        <Label fx:id="vaultProtectionLabel" contentDisplay="RIGHT" wrapText="true">
                            <font>
                                <Font name="Helvetica Neue Medium" size="14.0"/>
                            </font>
                            <graphic>
                                <ImageView fx:id="infoImageView" fitHeight="10.0" fitWidth="10.0"
                                           pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                        </Label>
                        <VBox spacing="2.0">
                            <HBox spacing="10.0">
                                <PasswordField fx:id="signupMasterPasswordField"
                                               HBox.hgrow="ALWAYS"/>
                                <PasswordField fx:id="signupConfirmMasterPasswordField"
                                               HBox.hgrow="ALWAYS"/>
                            </HBox>
                            <Label fx:id="errorLabel" managed="false" styleClass="error-label"
                                   textFill="red" visible="false" wrapText="true"/>
                        </VBox>
                    </VBox>
                    <Region maxHeight="3.0" prefHeight="3.0"/>

                    <Button fx:id="signupButton" maxWidth="1.7976931348623157E308" onAction="#handleSignup"
                            styleClass="primary"/>
                </VBox>

                <!-- Sección de Inicio de Sesión -->
                <VBox fx:id="loginSection" alignment="CENTER" spacing="7.0" StackPane.alignment="CENTER">
                    <VBox spacing="2.0">
                        <Label fx:id="accountMailLabel">
                            <font>
                                <Font name="Helvetica Neue Medium" size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="loginMailField"/>
                        <Label fx:id="loginEmailErrorLabel" styleClass="error-label" visible="false"
                               managed="false"/>

                    </VBox>
                    <VBox spacing="2.0">
                        <Label fx:id="accountPasswordLabel">
                            <font>
                                <Font name="Helvetica Neue Medium" size="14.0"/>
                            </font>
                        </Label>
                        <PasswordField fx:id="loginPasswordField"/>
                        <Label fx:id="loginPasswordErrorLabel" styleClass="error-label" visible="false"
                               managed="false"/>

                    </VBox>
                    <Region maxHeight="3.0" prefHeight="3.0"/>
                    <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" onAction="#handleLogin"
                            styleClass="primary"/>
                </VBox>
            </StackPane>
        </VBox>
    </center>
    <right>
        <Region prefWidth="100.0" BorderPane.alignment="CENTER"/>
    </right>
    <left>
        <Region prefWidth="100.0" BorderPane.alignment="CENTER"/>
    </left>
    <bottom>
        <Region prefHeight="60.0" BorderPane.alignment="CENTER"/>
    </bottom>
    <top>
        <HBox alignment="CENTER" maxWidth="600.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="100.0" right="100.0"/>
            </BorderPane.margin>
            <ImageView fx:id="logoImageView" fitHeight="100.0" fitWidth="200.0" pickOnBounds="true"
                       preserveRatio="true"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="toggleThemeButton" contentDisplay="CENTER" graphicTextGap="0.0" mnemonicParsing="false"
                    prefWidth="20.0" styleClass="icon-button"/>
            <Region maxHeight="15.0" maxWidth="0.5" prefHeight="15.0" prefWidth="0.5" styleClass="button-bar-separator"
                    HBox.hgrow="NEVER">
                <HBox.margin>
                    <Insets left="5.0" right="10.0"/>
                </HBox.margin>
            </Region>
            <ImageView fx:id="languageImageView" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true"
                       preserveRatio="true"/>
            <ComboBox fx:id="languageComboBox" centerShape="false" scaleShape="false" styleClass="language-selector"/>
        </HBox>
    </top>
</BorderPane>
