<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="passworld.controller.MyPasswordsController">
    <children>
        <BorderPane VBox.vgrow="ALWAYS">
            <center>
            <HBox alignment="CENTER" maxWidth="600.0" prefWidth="500.0" spacing="20.0" BorderPane.alignment="TOP_CENTER">
               <children>
                  <VBox alignment="TOP_CENTER" maxWidth="200.0" prefWidth="100.0" spacing="20.0">
                     <children>
                        <Button fx:id="showAllPasswordsButton" mnemonicParsing="false" prefHeight="150.0" prefWidth="100.0" text="Todas" VBox.vgrow="ALWAYS" />
                        <Button fx:id="showIssuePasswordsButton" mnemonicParsing="false" prefHeight="150.0" prefWidth="100.0" text="Problemas" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                      <VBox alignment="TOP_CENTER" maxWidth="480.0" prefWidth="380.0">
                          <HBox alignment="CENTER_LEFT" maxWidth="380.0" prefWidth="380.0" spacing="10">
                              <children>
                                  <Label fx:id="MyPasswordsHeaderLabel" style="-fx-font-weight: bold; -fx-font-size: 16px;">
                                      <padding>
                                          <Insets left="5.0" />
                                      </padding>
                                  </Label>
                                  <Region HBox.hgrow="ALWAYS" />
                                  <ComboBox fx:id="sortComboBox" prefWidth="50.0" styleClass="language-selector">
                              <HBox.margin>
                                 <Insets right="5.0" />
                              </HBox.margin>
                           </ComboBox>
                              </children>
                              <padding>
                                  <Insets bottom="5.0" />
                              </padding>
                          </HBox>
                          <TableView fx:id="passwordTable" prefWidth="380.0" stylesheets="@styles/styles.css">
                              <columns>
                                  <TableColumn fx:id="passwordEntryColumn" editable="false" maxWidth="440.0" minWidth="-1.0" prefWidth="340.0" />
                           <TableColumn fx:id="warningIconColumn" maxWidth="20.0" minWidth="-1.0" prefWidth="20.0" />
                                  <TableColumn fx:id="infoButtonColumn" editable="false" maxWidth="20.0" minWidth="-1.0" prefWidth="20.0" />
                              </columns>
                              <columnResizePolicy>
                                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                              </columnResizePolicy>
                          </TableView>
                      </VBox>
               </children>
            </HBox>
            </center>
            <left>
                <Region prefWidth="50.0" BorderPane.alignment="CENTER" />
            </left>
            <right>
                <Region prefWidth="50.0" BorderPane.alignment="CENTER" />
            </right>
            <bottom>
                <Region prefHeight="60.0" BorderPane.alignment="CENTER" />
            </bottom>
         <top>
            <HBox alignment="CENTER" maxWidth="600.0" prefHeight="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Region prefWidth="50.0" />
                  <HBox alignment="CENTER" maxWidth="600.0">
                     <children>
                        <Button fx:id="backButton" mnemonicParsing="false" prefWidth="20.0" />
                        <Region prefWidth="190.0" />
                        <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/passworld_logo.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
                  <Region prefWidth="240.0" styleClass="language-selector" />
               </children>
            </HBox>
         </top>
        </BorderPane>
    </children>
</VBox>
